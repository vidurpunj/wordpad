<%= simple_form_for @blog do |f| %>
    <% if @blog.errors.any? %>
        <div>
          <%= pluralize(@blog.errors.count, 'error')+ 'prohibit this blog being saved' %>
          <% @blog.errors.full_messages.each do |msg| %>
              <%= msg %><br/>
          <% end %>
    <% end %>
    </div>
    <%#= f.error_messages %>
    <%= f.input :content, input_html: {class: 'special'} %>
    <%= f.input :status, :collection => ['publish', 'draft', 'trash'], :include_blank => false %>
    <%= f.input :title %>
    <%= f.association :language, :include_blank => false %>
    <%= f.button :submit %>
<% end %>
<script type="text/javascript">
    $(document).ready(function () {
        new nicEditor({fullPanel: true}).panelInstance('blog_content');
    });
</script>