<div>
  <table>
    <thead>

    <th>
      <strong>Language:</strong>
    </th>
    <th>
      <strong>Status:</strong>
    </th>
    <th>
      <strong>Name:</strong>
    </th>
    <th>

    </th>
    </thead>
    <tr>
      <td>
        <%= Language.find(@blog.language_id).name %>
      </td>
      <td>
        <%= @blog.status %>
      </td>
      <td>
        <%= link_to User.find(@blog.user_id).name, blogs_path(id: @blog.user_id) %>
      </td>
    </tr>
  </table>
</div>
<div>
  <p>
    <strong>Title:</strong>
    <%= @blog.title %>
  </p>

  <p>
    <strong>Content:</strong>
  </p>
 <textarea class="special" id="blog_content">
        <%= @blog.content %>
</textarea>
</div>
<div>

  <%= link_to 'Edit', edit_blog_path(@blog) %> |

  <%= link_to 'Back', blogs_path %>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        new nicEditor({fullPanel: true}).panelInstance('blog_content');
        $('div[contenteditable="true"]').attr('contenteditable', false);
        $(".nicEdit-panelContain").hide();
    });
</script>