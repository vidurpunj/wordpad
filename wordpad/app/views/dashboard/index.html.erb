<h1>Welcome <%= if current_user.admin? then
                  'Admin'
                end %> to your Dashboard </h1>
<%= link_to 'My Blogs', '/dashboard/myblogs' %>
<div>
  <p id="notice"><%= notice %></p>

  <% if current_user.admin? %>
      <div>
        <%= link_to 'Blog Index', blogs_path %>
        <%= link_to 'Language Index', languages_path %>
        <%= link_to 'Users list', user_list_path %>
      </div>
  <% end %>
  <h1>Listing Blogs</h1>

  <% @blogs.each do |blog| %>
      <div>
        <table>
          <thead>
          <th>User</th>
          <th>Title</th>
          <th>Language</th>
          <th>Status</th>
          <th colspan="3"></th>
          </tr>
          </thead>
          <tr>
            <td><%= User.find(blog.user_id).name %></td>
            <td><%= blog.title %></td>
            <td><%= Language.find(blog.language_id).name %></td>
            <td><%= blog.status %></td>
            <% if current_user.admin? %>
                <td><%= link_to 'Show', blog %></td>
                <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
                <td><%= link_to 'Destroy', blog, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            <% end %>
          </tr>
        </table>
      </div>
      <div>
        <div>
          <p>
            <strong>Content:</strong>
          </p>
        </div>
        <div class="content">
          <td>
        <textarea class="special" id="<%= blog.id %>">
          <%= blog.content %>
        </textarea>
          </td>
        </div>
      </div>
  <% end %>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        <% @blogs.each do |blog| %>
        new nicEditor({fullPanel: true}).panelInstance('<%= blog.id%>');
        <% end%>
        $(".nicEdit-panelContain").hide();
    });

</script>